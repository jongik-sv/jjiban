{
  "version": "1.0",
  "workflows": {
    "development": {
      "name": "Development Workflow",
      "states": ["todo", "basic-design", "detail-design", "implement", "test", "done"],
      "transitions": [
        { "from": "todo", "to": "basic-design", "command": "start", "document": "010-basic-design.md" },
        { "from": "basic-design", "to": "detail-design", "command": "draft", "document": "020-detail-design.md" },
        { "from": "detail-design", "to": "implement", "command": "build", "document": "030-implementation.md" },
        { "from": "implement", "to": "test", "command": "verify", "document": "070-integration-test.md" },
        { "from": "test", "to": "done", "command": "done", "document": "080-manual.md" }
      ]
    },
    "defect": {
      "name": "Defect Workflow",
      "states": ["todo", "analysis", "fix", "test", "done"],
      "transitions": [
        { "from": "todo", "to": "analysis", "command": "start", "document": "010-defect-analysis.md" },
        { "from": "analysis", "to": "fix", "command": "analyze", "document": "030-implementation.md" },
        { "from": "fix", "to": "test", "command": "verify", "document": "070-test-results.md" },
        { "from": "test", "to": "done", "command": "done", "document": null }
      ]
    },
    "infrastructure": {
      "name": "Infrastructure Workflow",
      "states": ["todo", "design", "implement", "done"],
      "transitions": [
        { "from": "todo", "to": "design", "command": "start", "document": "010-tech-design.md" },
        { "from": "todo", "to": "implement", "command": "skip", "document": null },
        { "from": "design", "to": "implement", "command": "build", "document": "030-implementation.md" },
        { "from": "implement", "to": "done", "command": "done", "document": null }
      ]
    }
  }
}
